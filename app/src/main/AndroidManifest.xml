<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doost.babyflashcards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="me.doost.babyflashcards.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.doost.babyflashcards.CardsActivity"/>

        <activity android:name="me.doost.babyflashcards.AnimalCardsActivity"
            android:parentActivityName="me.doost.babyflashcards.HomeActivity">
        </activity>
        <activity android:name="me.doost.babyflashcards.FruitCardsActivity"
            android:parentActivityName="me.doost.babyflashcards.HomeActivity">
        </activity>
        <activity android:name="me.doost.babyflashcards.ColorCardsActivity"
            android:parentActivityName="me.doost.babyflashcards.HomeActivity">
        </activity>

    </application>

</manifest>