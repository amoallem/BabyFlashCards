<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/friendly_forest">
   <!-- android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.azin.babyflashcards.HomeActivity"> -->


    <include xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <Button
        android:text="@string/animals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:bottomRightRadius="38dp"
        android:bottomLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:topLeftRadius="8dp"
        android:id="@+id/buttonAnimals"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#E5EC34"
        android:fontFamily="casual"
        android:layout_below="@+id/editTextName"
       android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:text="@string/colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/buttonColors"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#DA4A4C"
        android:fontFamily="casual"
        android:layout_below="@+id/buttonAnimals"
        android:textSize="24sp" />

    <Button
        android:text="@string/fruits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/buttonFruits"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#699CFC"
        android:fontFamily="casual"
        android:layout_below="@+id/buttonColors"
        android:textSize="24sp" />

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/helloMessage"
     android:gravity="center"
     android:textSize="40sp"
     android:text="Hi There "
     android:textAppearance="@style/TextAppearance.AppCompat.Title"
     android:fontFamily="casual"
     android:textColor="@color/colorAccent"
     android:textStyle="normal|bold"
     android:layout_marginTop="60dp"
     android:layout_below="@+id/toolbar"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />

 <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:hint="Please enter your name here"
        android:gravity="center"
        android:lines="1"
        android:id="@+id/editTextName"
     android:layout_marginTop="49dp"
     android:layout_alignTop="@+id/helloMessage"
     android:layout_centerHorizontal="true" />


</RelativeLayout>
